<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">


    <TextView
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center_horizontal"
        android:text="My Tictactoe"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:layout_below="@+id/header_text"
        android:layout_marginTop="-2dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="124dp"
            android:layout_height="102dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:src="@drawable/cir" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="147dp"
            android:layout_height="103dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/cross" />

        <TextView
            android:layout_width="193dp"
            android:layout_height="96dp"
            android:layout_below="@+id/image2"
            android:layout_alignEnd="@+id/image2"
            android:layout_alignRight="@+id/image2"
            android:layout_alignBottom="@+id/image2"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="-19dp"
            android:layout_marginRight="-19dp"
            android:layout_marginBottom="-76dp"
            android:gravity="center"
            android:text="User2"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="206dp"
            android:layout_height="77dp"
            android:layout_alignBottom="@+id/image1"
            android:layout_marginBottom="-73dp"
            android:gravity="center"
            android:text="User1"
            android:textSize="30dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/my"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_text"
        android:orientation="vertical"
        android:layout_marginTop="200dp">
        <TextView
            android:id="@+id/header_text1"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn0"
                android:tag="0"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="0"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn1"
                android:tag="1"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn2"
                android:tag="2"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn3"
                android:tag="3"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="3"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn4"
                android:tag="4"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn5"
                android:tag="5"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn6"
                android:tag="6"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="6"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn7"
                android:tag="7"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="7"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/btn8"
                android:tag="8"
                android:textSize="30sp"
                android:background="@android:color/darker_gray"
                tools:text="8"/>

        </LinearLayout>

        <!--        <Button-->
        <!--            android:id="@+id/reset"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_margin="20dp"-->
        <!--            android:gravity="center"-->
        <!--            android:layout_width="130dp"-->
        <!--            android:layout_height="71dp"-->
        <!--            android:layout_below="@+id/my"-->
        <!--            android:text="   Restart   " />-->

    </LinearLayout>



</RelativeLayout>